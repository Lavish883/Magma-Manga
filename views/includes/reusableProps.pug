        img#Admin_Img(src= "https://cover.nep.li/cover/" + recd.IndexName + ".jpg")
    div.admin_text
        a#Admin_Title(href="manga.html?manga=" + recd.IndexName, class="admin_hover_text")
            span #{recd.SeriesName}
        div
            span Year:
                a.admin_hover_text(href="search.html?year=" + recd.Year) &nbsp;#{recd.Year}

        div    
            span Status:
                a.admin_hover_text(href="search.html?scan=" + recd.ScanStatus) &nbsp;#{recd.ScanStatus} (Scan)
