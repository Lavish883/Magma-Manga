mixin hotUpdate(allMangas)
    - var i = 0;
    while i < 12
        - var manga = allMangas[i]
        div.hot_update_item
            a(href="read.html?read="+ manga.ChapterLink, title="" + manga.SeriesName + "&nbsp;Chapter&nbsp;" + manga.Chapter)
                div.hot_update_item_name #{manga.SeriesName}
                img(src = "https://cover.nep.li/cover/" + manga.IndexName + ".jpg", style="max-width:145px;")
        - i++;

